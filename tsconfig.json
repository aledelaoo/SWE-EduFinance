{
  "compilerOptions": {
    //output
    "outDir": "dist",
    "rootDir": "src",

    //runtime/Module system (Node ESM)
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    //node environment
    "lib": ["ES2022"],
    "types": ["node"],
    "skipLibCheck": true,
    "resolveJsonModule": true,

    //interop & ergonomics
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,  //easier default imports with CJS libs

    //strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    //build artifacts
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}